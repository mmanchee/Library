@{
  Layout = "_Layout";
}

@model Library.Models.Patron;

@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
@Html.ActionLink(" All Patrons", "Index",null, null, new { @class="btn btn-info fa fa-cogs" })
@Html.ActionLink(" Edit", "Edit", new { id = Model.PatronId }, new { @class="btn btn-info fa fa-edit" })
@Html.ActionLink(" Delete", "Delete", new { id = Model.PatronId }, new { @class="btn btn-info fa fa-times" })
@Html.ActionLink(" Add Book", "AddBook", new { id = Model.PatronId }, new { @class="btn btn-info fa fa-plus" })
<hr />
<p>@Html.DisplayFor(model => model.Name)'s Details</p>
<hr />
<p>@Html.Label("Name"): @Html.DisplayFor(model => model.Name)</p>
<p>@Html.Label("Book History"):</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (ViewBag.Books.Count == 0)
    {
      <p>Their are no books in this history.</p>
    }
    else
    {
      <table>
        <tr>
          <th>Title</th>
        </tr>
        @foreach (var book in ViewBag.Books)
        {
          <tr>
            <td>@Html.ActionLink($"{book.Title}", "Details", "Books", new { id = book.BookId })</td>
          </tr>
        }
      </table>
    }
  </div>
</div>
<hr />