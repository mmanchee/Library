@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Patron>;

@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
<hr />
<p>Patrons</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <p>No Patrons have been added yet!</p>
    } 

    @foreach (Patron patron in Model)
    {
      <li>@Html.ActionLink($"{patron.Name}", "Details", new { id = patron.PatronId })</li>
    }
  </div>  
</div>
<hr />