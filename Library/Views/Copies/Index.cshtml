@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Copy>;

@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
<hr />
<p>Copies</p>
<hr />
<div class="box">
  <div class="inner-box">
    @if (@Model.Count == 0)
    {
      <p>No Copies have been added yet!</p>
    } 

    @foreach (Copy copy in Model)
    {
      <li>@Html.ActionLink($"{copy.Book.Title}", "Details", new { id = copy.CopyId })</li>
    }
  </div>  
</div>
<hr />