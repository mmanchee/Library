@{
  Layout = "_Layout";
}

@model Library.Models.Author

<h2>Book Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Authors.Count == 0)
{
  <p>This item does not belong to any authors</p>
}
else
{
  <h4>Authors the book belongs to:</h4>
   <ul>
  @foreach(var join in Model.Authors)
  {
    <li>@join.Book.Description</li>
    @using (Html.BeginForm("Delete Book", "Authors"))
    {
      @Html.Hidden("joinId", @join.AuthorBookId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Author", "Edit", new { id = Model.AuthorId })</p>
<p>@Html.ActionLink("Delete Author", "Delete", new { id = Model.AuthorId })</p>